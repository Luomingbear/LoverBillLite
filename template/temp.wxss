.card_layout {
  width: 92%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-radius: 10rpx;
  border-width: 1px;
  margin: 20rpx 4%;
  box-shadow: 0 0 10rpx lightgray;
}

.card_bottom_layout {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.avatar {
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.nickname {
  font-size: 12pt;
  color: #555860;
  margin-left: 10rpx;
}

.money {
  font-size: 14pt;
  color: #333;
  font-weight: bold;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.tag {
  font-size: 10pt;
  color: #666;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

/**
滑动的卡片个体
 */

.slider_item {
  position: absolute;
  width: 95%;
  height: 166px;
  top: 0;
}

.chargeTime {
  font-size: 12pt;
  color: #333;
}

.rest_time_small {
  margin-top: 10rpx;
  display: flex;
  font-size: 9pt;
  color: #898989;
  margin-left: 10rpx;
}

.click_layout {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 10rpx 20rpx;
}

.icon_normal {
  width: 12pt;
  height: 12pt;
}

.content_layout {
  display: flex;
  flex: auto;
  flex-direction: column;
}

.cover_right {
  display: flex;
  width: 150rpx;
  height: 150rpx;
  float: right;
  overflow: hidden;
}

.content {
  height: 2.5em;
  font-size: 14pt;
  color: #221d1e;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 0px 20rpx;
}

.location_layout {
  display: flex;
  flex-direction: row;
}

.location_icon {
  width: 12pt;
  height: 12pt;
  margin-top: 20rpx;
  float: left;
  margin-left: 20rpx;
}

.location_text {
  margin-top: 20rpx;
  font-size: 11pt;
  color: #898989;
}

.middle_text {
  display: flex;
  height: 3em;
  text-align: center;
  justify-content: center;
  align-items: Center;
  color: #898989;
}

/*文本内容*/

.content_full {
  display: flex;
  flex: 1;
  font-size: 14pt;
  color: #221d1e;
  margin: 0 20rpx;
  word-wrap: break-all break-word;
}

.most_cost_layout {
  display: flex;
  flex-direction: row;
  width: 92%;
  margin: 10rpx 4%;
  align-items: center;
}

.lover_cost_layout {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 20rpx 5%;
  align-items: center;
}

.lover_money {
  font-size: 12pt;
  color: #333;
  font-weight: bold;
}

.lover_nickname {
  font-size: 16pt;
  flex: auto;
  color: #333;
  text-align: center;
  font-weight: bold;
}

.lover_center_line {
    border-left: 1px dashed lightgray;
}
