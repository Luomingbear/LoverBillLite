/* pages/create.wxss */
@import "../../template/temp.wxss";

.moneyInput {
  text-align: center;
  font-size: 20pt;
  height: 24pt;
  color: #ff7073;
  flex: auto;
  font-weight: bold;
}

/* 选择标签 */

.tag {
  width: 100%;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  overflow: hidden;
  overflow-x: auto;
  overflow-y: visible;
  -webkit-overflow-scrolling: touch;
}

.tag_wrap {
  min-width: 750rpx;
}

.tag_wrap .tag_item {
  display: inline-block;
  text-align: center;
  font-size: 0;
}

.tag_wrap .tag_item .item_wrap {
  width: 120rpx;
  height: 122rpx;
  padding: 10rpx 0;
  margin: 0 auto;
}

.tag_wrap .tag_item .item_img {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  padding-bottom: 10rpx;
}

.tag_wrap .tag_item .item_title {
  text-align: center;
  width: 100%;
  font-size: 10pt;
  color: #666;
}

.tag_wrap .tag_item.item_selected .item_wrap {
  border: 1rpx dashed #ff7073;
  border-radius: 6rpx;
}

.textLayout {
  margin: 0 5%;
  display: flex;
  align-items: center;
  font-size: 12pt;
  color: #666;
}

.stagLayout {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 10pt;
}

.stagItem {
  background: lightgray;
  text-align: center;
  border-radius: 2pt;
  color: white;
  font-size: 9pt;
  margin-top: 10rpx;
  margin-right: 10rpx;
  padding: 1pt 2pt;
}
